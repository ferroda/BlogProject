@model Blog.BlogPost

@{
    ViewBag.Title = "Blog törlés";
}


<h3>Biztos vagy benne, hogy ki szeretnéd törölni a posztodat?</h3>
<div>
    <hr />
    <table class="table table-responsive">
        <tr>
            <th>
                A törölni kívánt blog címe
            </th>
            <th>
                A törölni kívánt blog szövege
            </th>
        </tr>

        <tr>
            <td>@Html.DisplayFor(model => model.Title)</td>
       
       
            <td>@Html.DisplayFor(model => model.Text)</td>
        </tr>
    </table>

   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Vissza a listához", "BlogList")
        </div>
    }
</div>
